<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:groupingVm="using:ModernX2Launcher.ViewModels.ModListGrouping"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="100"
             x:Class="ModernX2Launcher.Views.ModListGrouping.BasicGroupingOptionView">
    
    <Design.DataContext>
        <groupingVm:DesignTimeBasicGroupingOptionViewModel Label="Option" />
    </Design.DataContext>
    
    <Button Command="{Binding ButtonClicked}"
            Classes.activeGroupingMode="{Binding IsActive}">
        <TextBlock Text="{Binding Label}"></TextBlock>
    </Button>
</UserControl>
