<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mi="using:Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:ModernX2Launcher.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="48" d:DesignHeight="200"
             x:Class="ModernX2Launcher.Views.Controls.MainWindowModeButton">
    
    <UserControl.Styles>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="{x:Null}" />
            <Setter Property="Background" Value="{DynamicResource ThemeControlHighlightMidBrush}"/>
        </Style>
    </UserControl.Styles>
    
    <Button BorderBrush="{x:Null}" 
            ToolTip.Tip="{Binding $parent[controls:MainWindowModeButton].ModeName}">
        <Panel>
            <Rectangle />
            <mi:MaterialIcon Kind="{Binding $parent[controls:MainWindowModeButton].Icon}"
                             HorizontalAlignment="Stretch" Margin="7"
                             Width="23" Height="23" />
        </Panel>
    </Button>
</UserControl>
