<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ModernX2Launcher"
             x:Class="ModernX2Launcher.App">
    <Application.DataTemplates>
        <local:MaterialIconViewLocation />
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <!-- <FluentTheme Mode="Light"/> -->
        
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
        
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Default.xaml"/>
        
        <StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml" />
        
        <StyleInclude Source="avares://Material.Icons.Avalonia/MaterialIcon.xaml" />
        
        <!-- Custom templated controls -->
        <StyleInclude Source="/Views/Controls/MainWindowModeButton.axaml"></StyleInclude>
        <StyleInclude Source="/Views/Controls/IconStatBlock.axaml"></StyleInclude>
    </Application.Styles>
</Application>
